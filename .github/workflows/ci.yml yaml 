name: CI

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Clonar repositório
        uses: actions/checkout@v3

      - name: Instalar dependências
        run: sudo apt-get install -y build-essential

      - name: Compilar o projeto
        run: |
          gcc -o meu_programa main.c
          ./meu_programa
